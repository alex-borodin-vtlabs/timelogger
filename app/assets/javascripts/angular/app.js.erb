angular.module('app', ['ngResource', 'ngRoute'])
    .config(['$routeProvider', '$locationProvider', function($routeProvider, $locationProvider) {
 		$locationProvider.html5Mode(true);
        $routeProvider
            .when('/', {controller: 'ProjectIndexController',    templateUrl: '<%= asset_path('angular/templates/index.html') %>'})
            .when('/projects/:id', {controller: 'ProjectShowController',    templateUrl: '<%= asset_path('angular/templates/project.html') %>'})
            .otherwise({redirectTo: '/'});
}]);